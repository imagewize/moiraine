<?xml version="1.0"?>
<ruleset name="Moiraine Theme">
    <description>Coding standards for Moiraine Theme</description>

    <!-- Use WordPress standards -->
    <rule ref="WordPress" />

    <!-- Exclude pattern files -->
    <exclude-pattern>/patterns/*</exclude-pattern>
    <exclude-pattern>/vendor/*</exclude-pattern>

    <!-- Exclude WordPress block build files (generated by @wordpress/create-block) -->
    <exclude-pattern>/inc/blocks/*/build/*</exclude-pattern>

    <!-- Additional exclusions if needed -->
    <exclude-pattern>*.js</exclude-pattern>
    <exclude-pattern>*.css</exclude-pattern>

    <!-- Exclude WordPress standard filename conventions for blocks -->
    <rule ref="WordPress.Files.FileName">
        <exclude-pattern>/inc/blocks/*/build/*</exclude-pattern>
    </rule>
</ruleset>